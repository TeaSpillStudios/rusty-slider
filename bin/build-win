#!/usr/bin/env sh

# Build for windows
cargo build --release --target x86_64-pc-windows-gnu

# Package windows zip
APPNAME=rusty-slider
cp target/x86_64-pc-windows-gnu/release/$APPNAME.exe ./
zip -ruq target/$APPNAME-win.zip $APPNAME.exe slides.md theme.json Amble-Regular.ttf background.png
rm $APPNAME.exe
